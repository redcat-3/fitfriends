{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/config/config-users": ["config/config-users/src/index.ts"],
      "@project/repositories/user-repository": [
        "repositories/user-repository/src/index.ts"
      ],
      "@project/shared/shared-dto": ["shared/shared-dto/src/index.ts"],
      "@project/shared/shared-pipes": ["shared/shared-pipes/src/index.ts"],
      "@project/shared/shared-query": ["shared/shared-query/src/index.ts"],
      "@project/shared/shared-rdo": ["shared/shared-rdo/src/index.ts"],
      "@project/shared/shared-types": ["shared/shared-types/src/index.ts"],
      "@project/util/util-core": ["util/util-core/src/index.ts"],
      "@project/util/util-types": ["util/util-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
