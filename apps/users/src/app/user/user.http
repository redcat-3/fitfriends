PATCH http://localhost:3001/api/user/update HTTP/1.1
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "name": "Test Name",
  "description": "Колдовство, предательство и необыкновенный мир фэнтези.",
  "caloriesToReset": 3000,
  "trainingReady": true
}

